require-b2 5.1 ;

import project ;

project /boost/scope
    : common-requirements
        <library>/boost/assert//boost_assert
        <library>/boost/config//boost_config
        <library>/boost/core//boost_core
        <library>/boost/type_traits//boost_type_traits
        <include>include
    ;

explicit
    [ alias boost_scope ]
    [ alias all : boost_scope test ]
    ;

call-if : boost-library scope
    ;
